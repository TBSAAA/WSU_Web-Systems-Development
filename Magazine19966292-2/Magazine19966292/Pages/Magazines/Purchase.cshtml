@page
@model Magazine19966292.Pages.Magazines.PurchaseModel
@{
    ViewData["Title"] = "Subscribe Magazine";
}

<h2>Subscribe Magazine</h2>
<br />

<form asp-page="Purchase">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MagazinePurchase.MagazineTitle" class="control-label"></label>
        <select asp-for="MagazinePurchase.MagazineTitle" asp-items="Model.TitleList" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="MagazinePurchase.MagazineCount" class="control-label"></label>
        <input asp-for="MagazinePurchase.MagazineCount" class="form-control" />
        <span asp-validation-for="MagazinePurchase.MagazineCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MagazinePurchase.CreditCardNum" class="control-label"></label>
        <input asp-for="MagazinePurchase.CreditCardNum" class="form-control" />
        <span asp-validation-for="MagazinePurchase.CreditCardNum" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Subscribe" class="btn btn-primary" />
    </div>
</form>
<br />

<hr />
@if (ViewData["TotalPrice"] != null)
{
    <h5>The name of the magazine to <b>@Model.MagazinePurchase.MagazineTitle</b>.</h5>
    <h5>The numbers of the issues to subscribe is <b>@Model.MagazinePurchase.MagazineCount</b>.</h5>
    <h5>Total price for the above subscription is : <b>$@ViewData["TotalPrice"]</b></h5>
    <h5>The credit card number is: <b>@Model.MagazinePurchase.CreditCardNum</b>.</h5>
    <hr />
}

<div>
    <a asp-page="./Index">Back to Magazine List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
